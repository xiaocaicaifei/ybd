<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="style_base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- 用于设置整个页面最外层的样式 -->
    <style name="style_base_bg" parent="@style/style_base">
        <item name="android:background">@color/unitform_background_gray</item>
    </style>

    <style name="style_base_component" parent="style_base">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_base_component2" parent="style_base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- 所有标题头的样式 -->
    <style name="uniform_title" parent="@style/style_base_component">
        <item name="android:layout_height">100dip</item>
        <item name="android:background">@color/unitform_title_red</item>
    </style>

    <!-- 按钮的登录 -->
    <style name="login_button" parent="@style/style_base_component">
        <item name="android:layout_height">48dip</item>
        <item name="android:background">@drawable/login_share_button</item>
        <item name="android:layout_marginLeft">13dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">13dip</item>
    </style>

    <!-- Toast樣式 -->
    <style name="toast_view" parent="style_base_component">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 地址自定义弹出框 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">@color/unitform_button_gray</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 统一的横线线的样式 -->
    <style name="uniform_line" parent="@style/style_base_component">
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/unitform_line_color</item>
    </style>
    <!-- 统一的竖线线的样式 -->
    <style name="uniform_line2" parent="@style/style_base_component">
        <item name="android:background">@color/unitform_line_color</item>
        <item name="android:layout_width">1dip</item>
    </style>
    <!-- 统一的横线窄线的样式 -->
    <style name="uniform_line3" parent="@style/style_base_component">
        <item name="android:layout_height">0.5dip</item>
        <item name="android:background">@color/unitform_line_color</item>
    </style>
    <!-- 统一的输入框的样式 -->
    <style name="uniform_input" parent="@style/style_base">
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/login_input_text</item>
        <item name="android:textColorHint">@color/login_text_gray</item>
    </style>
    <!-- 统一的输入框左边提示字体的样式 -->
    <style name="uniform_input_left_prompt" parent="@style/style_base_component2">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/login_text_gray</item>
    </style>

    <!-- 统一的搜索框的样式 -->
    <style name="uniform_search_input" parent="@style/style_base_component">
        <item name="android:background">@drawable/xx_share_search</item>
        <item name="android:layout_height">28dip</item>
        <item name="android:hint">@string/ss</item>
        <item name="android:drawableLeft">@drawable/xx_search</item>
        <item name="android:drawablePadding">5dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/xx_list_title_color</item>
        <item name="android:textColorHint">@color/xx_search_hint_color</item>
        <item name="android:layout_marginLeft">11dip</item>
        <item name="android:layout_marginRight">11dip</item>
        <item name="android:layout_marginTop">7dip</item>
        <item name="android:layout_marginBottom">7dip</item>
    </style>

    <!-- 统一的Listview的样式 -->
    <style name="uniform_listview" parent="@style/style_base">
        <item name="android:divider">@color/unitform_background_gray</item>
        <item name="android:dividerHeight">1dip</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- 个人中心-主页面-Linearout的样式 -->
    <style name="grzx_layout" parent="@style/style_base">
        <item name="android:layout_height">52dip</item>
        <item name="android:background">@drawable/uniform_onpress</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">11dip</item>
        <item name="android:paddingRight">11dip</item>
    </style>

    <!-- 艺论 -上传-描述字体的样式 -->
    <style name="yl_sc_ms" parent="@style/style_base_component2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yl_sc_ms</item>
    </style>
    <!-- 艺论 -上传-描述字体的样式 -->
    <style name="yl_sc_nr" parent="@style/style_base_component2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/yl_sc_ms</item>
    </style>
    <!-- 艺论-上传-内容输入框的样式 -->
    <style name="yl_sc_nr_input" parent="@style/style_base_component">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/unitform_line_color</item>
        <item name="android:textColor">@color/yl_sc_nr</item>
        <item name="android:background">@null</item>
        <item name="android:maxLength">7</item>
    </style>
    <!-- 艺论-上传-未选择按钮的样式 -->
    <style name="yl_sc_button_unselect" parent="@style/style_base_component2">
        <item name="android:textColor">@color/unitform_line_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:background">@drawable/yl_share_button3</item>
    </style>
    <!-- 艺论-上传-选择按钮的样式 -->
    <style name="yl_sc_button_select" parent="@style/style_base_component2">
        <item name="android:textColor">@color/unitform_button_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">25dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:background">@drawable/yl_share_button4</item>
    </style>
    <!-- 艺论-上传-充值-未选择按钮的样式 -->
    <style name="yl_sc_cz_button_unselect" parent="@style/style_base_component">
        <item name="android:textColor">@color/yl_sc_cz_xzczje</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_height">38dip</item>
        <item name="android:background">@drawable/yl_share_button3</item>
    </style>
    <!-- 艺论-上传-充值-选择按钮的样式 -->
    <style name="yl_sc_cz_button_select" parent="@style/style_base_component2">
        <item name="android:textColor">@color/unitform_button_red</item>
        <item name="android:textSize">21sp</item>
        <item name="android:layout_height">38dip</item>
        <item name="android:background">@drawable/yl_share_button4</item>
    </style>
    
    <!-- 艺论—主页面-估分条-下面的红色刻度 -->
    <style name="yl_index_seekbar_kd" parent="@style/style_base_component2">
        <item name="android:background">@drawable/yl_index_seekbar_kd</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- 艺论—主页面-估分条-下面的字体 -->
    <style name="yl_index_seekbar_font" parent="@style/style_base_component2">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/yl_index_seekbar_font</item>
        <item name="android:layout_marginTop">8dip</item>
         <item name="android:layout_gravity">center</item>
    </style>

</resources>