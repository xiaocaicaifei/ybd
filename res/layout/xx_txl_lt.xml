<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_bg"
    android:orientation="vertical" >

    <include layout="@layout/uniform_title" />

    <ListView
        android:id="@+id/lt_lv"
        style="@style/uniform_listview"
        android:layout_marginTop="11dip"
        android:layout_weight="1"
        android:divider="@color/unitform_background_gray"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:id="@+id/pl_rl"
        style="@style/style_base_component"
        android:layout_marginTop="5dip"
        android:background="@color/unitform_background_gray"
        android:orientation="vertical" >

        <View style="@style/uniform_line" />

        <LinearLayout
            style="@style/style_base_component"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >

            <EditText
                android:id="@+id/xx_ev"
                style="@style/style_base_component"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:inputType="textMultiLine"
                android:maxLines="4"
                android:minLines="2"
                android:singleLine="false"
                android:textColor="#484848"
                android:textSize="14sp" />

            <Button
                android:id="@+id/fs_b"
                style="@style/style_base_component2"
                android:layout_marginLeft="0dip"
                android:background="@drawable/qz_grzl_button2_onpress"
                android:paddingBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip"
                android:paddingTop="5dip"
                android:text="@string/fs2"
                android:visibility="gone"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/tj_b"
                style="@style/style_base_component2"
                android:layout_marginLeft="0dip"
                android:background="@drawable/xx_lt_tj"
                android:visibility="visible" />
        </LinearLayout>

        <View
            style="@style/uniform_line"
            android:layout_height="1.5dip"
            android:layout_marginLeft="12dip"
            android:layout_marginRight="12dip"
            android:background="@color/unitform_button_red" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="5dip" >
        </ScrollView>

        <LinearLayout
            android:id="@+id/fjgn_ll"
            style="@style/style_base_component"
            android:layout_marginTop="20dip"
            android:visibility="gone"
            android:layout_marginBottom="20dip"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/style_base_component2"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/tp_iv"
                    style="@style/style_base_component2"
                    android:background="@drawable/xx_lt_tp" />

                <TextView
                    style="@style/style_base_component2"
                    android:layout_marginTop="5dip"
                    android:text="@string/lt_tp"
                    android:textColor="@color/xx_txl_jjxpy_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_base_component2"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/zz_iv"
                    style="@style/style_base_component2"
                    android:background="@drawable/xx_lt_zz" />

                <TextView
                    style="@style/style_base_component2"
                    android:layout_marginTop="5dip"
                    android:text="@string/lt_zz"
                    android:textColor="@color/xx_txl_jjxpy_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_base_component2"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/wz_iv"
                    style="@style/style_base_component2"
                    android:background="@drawable/xx_lt_wz" />

                <TextView
                    style="@style/style_base_component2"
                    android:layout_marginTop="5dip"
                    android:text="@string/lt_wz"
                    android:textColor="@color/xx_txl_jjxpy_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>