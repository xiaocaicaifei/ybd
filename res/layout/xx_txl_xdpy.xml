<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_bg"
    android:clickable="true"
    android:orientation="vertical" >

    <include layout="@layout/uniform_title" />

    <EditText
        android:id="@+id/search"
        style="@style/uniform_search_input" />

    <View style="@style/uniform_line" />

    <LinearLayout
        style="@style/style_base_component"
        android:layout_height="67dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ylpy_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ylpy_iv"
                style="@style/style_base_component2"
                android:background="@drawable/xx_txl_xdpy_ylpy" />

            <LinearLayout
                style="@style/style_base_component2"
                android:layout_marginLeft="11dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/style_base_component2"
                    android:text="@string/ylpy"
                    android:textColor="@color/xx_txl_xdpy_color"
                    android:textSize="15sp" />

                <TextView
                    style="@style/style_base_component2"
                    android:layout_marginTop="4dip"
                    android:text="@string/rsylyh"
                    android:textColor="@color/xx_txl_jjxpy_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/uniform_line2" />

        <LinearLayout
            android:id="@+id/txlhy_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/tjdv_iv"
                style="@style/style_base_component2"
                android:background="@drawable/xx_txl_xdpy_txlhy" />

            <LinearLayout
                style="@style/style_base_component2"
                android:layout_marginLeft="11dip"
                android:orientation="vertical" >

                <TextView
                    style="@style/style_base_component2"
                    android:text="@string/txlhy"
                    android:textColor="@color/xx_txl_xdpy_color"
                    android:textSize="15sp" />

                <TextView
                    style="@style/style_base_component2"
                    android:layout_marginTop="4dip"
                    android:text="@string/yqtxlhy"
                    android:textColor="@color/xx_txl_jjxpy_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View style="@style/uniform_line" />
    <LinearLayout 
        style="@style/style_base_component"
        android:layout_height="45dip"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:layout_marginTop="10dip"
        android:orientation="vertical">
        <LinearLayout 
            style="@style/style_base_component"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="0dip"
            android:orientation="horizontal">
            <LinearLayout 
                style="@style/style_base_component2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/mjph_tv"
                    style="@style/xx_txl_xdpy_title"
                    android:text="@string/mjph"/>
                <View 
                    android:id="@+id/mjph_v"
                    android:background="@color/unitform_button_red"
                    style="@style/xx_txl_xdpy_title_under_line"
                   />
            </LinearLayout>
            <LinearLayout 
                style="@style/style_base_component2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/mjph2_tv"
                    style="@style/xx_txl_xdpy_title"
                    android:text="@string/mjph2"/>
                <View 
                    android:id="@+id/mjph2_v"
                    style="@style/xx_txl_xdpy_title_under_line"
                    />
            </LinearLayout>
            <LinearLayout 
                style="@style/style_base_component2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/pjph_tv"
                    style="@style/xx_txl_xdpy_title"
                    android:text="@string/pjph"/>
                <View 
                    android:id="@+id/pjph_v"
                    style="@style/xx_txl_xdpy_title_under_line"
                    />
            </LinearLayout>
           <LinearLayout 
                style="@style/style_base_component2"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/fsph_tv"
                    style="@style/xx_txl_xdpy_title"
                    android:text="@string/fsph"/>
                <View 
                    android:id="@+id/fsph_v"
                    style="@style/xx_txl_xdpy_title_under_line"
                   />
            </LinearLayout>
        </LinearLayout>
        <View style="@style/uniform_line"
            android:background="@color/unitform_button_red"/>
    </LinearLayout>
     <android.support.v4.view.ViewPager
        android:id="@+id/ylhy_vp"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    </android.support.v4.view.ViewPager>

</LinearLayout>