<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_component"
    android:layout_height="50dip"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="11dip"
    android:paddingRight="11dip" >

    <ImageView
        android:id="@+id/tx_iv"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip" />

    <LinearLayout
        style="@style/style_base_component"
        android:layout_height="50dip"
        android:layout_marginLeft="11dip"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nc_tv"
            style="@style/style_base_component2"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            style="@style/style_base_component"
            android:layout_marginTop="5dip"
            android:orientation="horizontal" >

            <LinearLayout
                style="@style/style_base_component2"
                android:layout_weight="1" >

                <TextView
                    style="@style/xx_txl_tjdv_ms"
                    android:text="@string/xx_gm" />

                <TextView
                    android:id="@+id/gm_tv"
                    style="@style/xx_txl_tjdv_value" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_base_component2"
                android:layout_weight="1" >

                <TextView
                    style="@style/xx_txl_tjdv_ms"
                    android:layout_marginLeft="10dip"
                    android:text="@string/xx_mc" />

                <TextView
                    android:id="@+id/mc_tv"
                    style="@style/xx_txl_tjdv_value" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_base_component2"
                android:layout_weight="1" >

                <TextView
                    style="@style/xx_txl_tjdv_ms"
                    android:layout_marginLeft="10dip"
                    android:text="@string/xx_xy" />

                <TextView
                    android:id="@+id/xy_tv"
                    style="@style/xx_txl_tjdv_value" />
            </LinearLayout>

            <LinearLayout
                style="@style/style_base_component2"
                android:layout_weight="1" >

                <TextView
                    style="@style/xx_txl_tjdv_ms"
                    android:layout_marginLeft="10dip"
                    android:text="@string/xx_fs" />

                <TextView
                    android:id="@+id/fs_tv"
                    style="@style/xx_txl_tjdv_value" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/style_base_component2"
        android:layout_marginRight="5dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/jhy_iv"
            style="@style/style_base_component2"
            android:layout_marginLeft="6dip"
            android:background="@drawable/xx_txl_jhy_sel"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/zj_iv"
            style="@style/style_base_component2"
            android:layout_marginLeft="6dip"
            android:background="@drawable/xx_txl_zj_sel"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>