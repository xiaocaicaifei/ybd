<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_bg"
    android:orientation="vertical" >

    <include layout="@layout/uniform_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/login_logo_bg" />
    </RelativeLayout>

    <View
        style="@style/uniform_line"
        android:layout_marginTop="15dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_zh_logo" />

        <EditText
            android:id="@+id/login_zh"
            style="@style/uniform_input"
            android:layout_marginLeft="6dip"
            android:hint="@string/qsrndzh"
            android:inputType="number"
            android:maxLength="11" />
    </LinearLayout>

    <View style="@style/uniform_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/login_mm_logo" />

        <EditText
            android:id="@+id/login_mm"
            style="@style/uniform_input"
            android:layout_marginLeft="6dip"
            android:hint="@string/qsrndmm"
            android:inputType="textPassword"
            android:maxLength="18" />
    </LinearLayout>

    <View style="@style/uniform_line" />

    <Button
        android:id="@+id/login_login_b"
        style="@style/login_button"
        android:layout_marginTop="13dip"
        android:text="@string/dl" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/login_ljzc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="15dip"
            android:text="@string/ljzc"
            android:textColor="@color/login_text_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/login_wjmm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dip"
            android:text="@string/wjmm"
            android:textColor="@color/login_text_gray"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dip"
        android:layout_marginRight="11dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <View
            style="@style/uniform_line"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dip"
            android:layout_marginRight="26dip"
            android:text="@string/kjfsdl"
            android:textColor="@color/login_text_gray"
            android:textSize="12sp" />

        <View
            style="@style/uniform_line"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73dip"
        android:layout_marginRight="73dip"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="18dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/login_wb"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/login_xl" />
        </RelativeLayout>
		<View 
		    style="@style/uniform_line2"
		    android:layout_height="29dip"/>
        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/login_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/login_wx" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>