<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_component"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="11dip"
    android:paddingRight="13dip" >

    <LinearLayout
        style="@style/style_base_component"
        android:layout_height="70dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tx_iv"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:scaleType="centerCrop" />

        <LinearLayout
            style="@style/style_base_component2"
            android:layout_marginLeft="13dip"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title_tv"
                style="@style/style_base_component2"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/xx_list_title_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nr_tv"
                style="@style/style_base_component2"
                android:layout_marginTop="10dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/xx_search_hint_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/style_base_component2"
            android:layout_marginLeft="13dip"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/time_tv"
                style="@style/style_base_component2"
                android:textColor="@color/xx_search_hint_color"
                android:textSize="12sp" />

            <!-- <RelativeLayout
                android:layout_width="19dip"
                android:layout_height="19dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/xx_ts_yuandian" >

                <TextView
                    android:id="@+id/num_b"
                    style="@style/style_base_component2"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </RelativeLayout> -->

            <Button
                android:id="@+id/num_b"
               	android:background="@drawable/xx_ts_yuandian"
                style="@style/style_base_component2"
                android:textColor="@color/white"
                android:focusable="false"
                android:enabled="false"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>