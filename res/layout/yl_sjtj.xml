<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base"
    android:background="#e0000000"
    android:orientation="vertical" >
	
    <ImageView 
        android:id="@+id/qx_iv"
        style="@style/style_base_component2"
        android:background="@drawable/yl_gb"
        android:layout_gravity="right"
        android:layout_marginTop="15dip"
        android:layout_marginRight="23dip"/>
    <TextView 
        style="@style/style_base_component2"
        android:text="@string/sjtj"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout 
        style="@style/style_base_component"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:layout_height="200dip"
        android:background="@drawable/yl_share_sjtj_dialog"
        android:orientation="vertical">
        <TextView 
            style="@style/style_base_component2"
            android:textColor="@color/yl_sjtj_color"
            android:layout_gravity="center_horizontal"
            android:text="@string/djlk"
            android:textSize="14sp"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"/>
        <LinearLayout
            style="@style/style_base_component"
            android:background="@color/unitform_background_gray"
            android:orientation="horizontal">
            <LinearLayout 
                style="@style/style_base"
                android:layout_weight="1">
               <com.github.mikephil.charting.charts.PieChart
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:background="@color/white"
                   android:id="@+id/spread_pie_chart"
                   />
            </LinearLayout>
            <LinearLayout 
                style="@style/style_base"
                android:layout_weight="1">
               <com.ybd.common.defined.HistogramView 
                   android:id="@+id/gzrtxtjt_hv2"
                   style="@style/style_base"
                   />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>