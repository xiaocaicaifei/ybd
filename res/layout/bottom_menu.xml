<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_component"
    android:layout_height="48dip"
    android:background="@color/bottom_menu_bg"
    android:orientation="vertical" >

    <View
        style="@style/uniform_line"
        android:layout_height="0.5dip" />

    <LinearLayout
        style="@style/style_base"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/xx_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/xx_iv"
                style="@style/style_base_component2"
                android:background="@drawable/home_xx" />
            <TextView 
                android:id="@+id/xx_tv"
                style="@style/style_base_component2"
                android:textColor="@color/bottom_menu_text_unselect"
                android:layout_marginTop="0dip"
                android:textSize="@dimen/nav_bottom_text_value"
                android:text="@string/xx"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qz_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/qz_iv"
                style="@style/style_base_component2"
                android:background="@drawable/home_qz" />
            <TextView 
                android:id="@+id/qz_tv"
                style="@style/style_base_component2"
                android:textColor="@color/bottom_menu_text_unselect"
                android:textSize="@dimen/nav_bottom_text_value"
                android:layout_marginTop="0dip"
                android:text="@string/qz"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/yl_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/yl_iv"
                style="@style/style_base_component2"
                android:background="@drawable/home_yl" />
            <TextView 
                android:id="@+id/yl_tv"
                style="@style/style_base_component2"
                android:textSize="@dimen/nav_bottom_text_value"
                android:textColor="@color/bottom_menu_text_unselect"
                android:layout_marginTop="0dip"
                android:text="@string/yl"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pm_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/pm_iv"
                style="@style/style_base_component2"
                android:background="@drawable/home_pm" />
            <TextView 
                android:id="@+id/pm_tv"
                style="@style/style_base_component2"
                android:textSize="@dimen/nav_bottom_text_value"
                android:textColor="@color/bottom_menu_text_unselect"
                android:layout_marginTop="0dip"
                android:text="@string/pm"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gr_ll"
            style="@style/style_base_component2"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/gr_iv"
                style="@style/style_base_component2"
                android:background="@drawable/home_gr" />
            <TextView 
                android:id="@+id/gr_tv"
                style="@style/style_base_component2"
                android:textSize="@dimen/nav_bottom_text_value"
                android:textColor="@color/bottom_menu_text_unselect"
                android:layout_marginTop="0dip"
                android:text="@string/gr"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>