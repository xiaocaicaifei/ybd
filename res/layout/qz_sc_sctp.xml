<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/style_base_bg"
    android:orientation="vertical" >

    <include layout="@layout/uniform_title" />

    <LinearLayout
        style="@style/style_base"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/nr_et"
            style="@style/style_base_component"
            android:hint="@string/xxxsd"
            android:inputType="textMultiLine"
            android:layout_height="87dip"
            android:lines="3"
            android:background="@null"
            android:textColorHint="@color/qz_sctp_xxxsd"
            android:textSize="@dimen/qz_sctp_xxxsd" />
        <GridView
            android:id="@+id/tp_gv"
            style="@style/style_base_component"
			android:numColumns="4"
            android:layout_weight="1"
            android:horizontalSpacing="5dip"
            android:verticalSpacing="5dip"
            >
        </GridView>
        <Button
            android:layout_gravity="bottom"
            android:id="@+id/qrsc_b"
            android:layout_width="fill_parent"
            android:layout_height="33dip"
            style="@style/login_button"
        	android:text="@string/qrsc"
        	android:layout_marginBottom="20dip"
            />
    </LinearLayout>

</LinearLayout>